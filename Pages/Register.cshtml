@page
@model healthcareMIS.Pages.RegisterModel
@{
}

<div class="container">
	<div class="row justify-content-center align-items-center">
		<div class="col-sm-12 col-md-12 col-lg-4">
			<h1 class="mb-3">Register</h1>
			<form method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="mb-3">
					<label class="form-label" asp-for="registerInfo.Username">Username</label>
					<input type="text" asp-for="registerInfo.Username" class="form-control" />
					<span asp-validation-for="registerInfo.Username" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label class="form-label" asp-for="registerInfo.Email">Email</label>
					<input type="email" asp-for="registerInfo.Email" class="form-control" />
					<span asp-validation-for="registerInfo.Email" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label class="form-label" asp-for="registerInfo.Password">Password</label>
					<input type="text" asp-for="registerInfo.Password" class="form-control" />
					<span asp-validation-for="registerInfo.Password" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label class="form-label" asp-for="registerInfo.ConfirmPassword">Confirm Password</label>
					<input type="text" asp-for="registerInfo.ConfirmPassword" class="form-control" />
					<span asp-validation-for="registerInfo.ConfirmPassword" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<button type="submit" class="btn btn-primary">Register</button>
				</div>
			</form>
		</div>
	</div>
</div>
