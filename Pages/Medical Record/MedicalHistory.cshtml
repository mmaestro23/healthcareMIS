@page
@model healthcareMIS.Pages.Medical_Record.MedicalHistoryModel
@{
}

<br>
<h2>Medical History</h2>

@if (Model.errorMessage.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<form method="post">


	<div class="form-group">
		<label class="col-sm-3 col-form-label">Patient Name:</label>
		<select class="custom-select mr-sm-2" name="patientId">
			@foreach (var item in Model.Patients)
			{
				<option value="@item.id">@item.name</option>
			}
		</select>
	</div>

	<div class="form-group">
		<label class="col-sm-3 col-form-label">Doctor Name:</label>
		<select class="custom-select mr-sm-2" name="doctorId">
			@foreach (var item in Model.Doctors)
			{
				<option value="@item.doctor_id">@item.firstname</option>
			}
		</select>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Hospital Vist Day</label>
		<div class="col-sm-6">
			<input type="date" class="form-control" id="visitday" name="visitday" value="@Model.medicInfo.visit_date">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">diagnosis</label>
		<div class="col-sm-6">
			<textarea class="form-control" id="diagnosis" name="diagnosis" rows="3" value="@Model.medicInfo.diagnosis"></textarea>
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Treatment</label>
		<div class="col-sm-6">
			<textarea class="form-control" id="treatment" name="treatment" rows="3" value="@Model.medicInfo.treatment"></textarea>
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Medication</label>
		<div class="col-sm-6">
			<textarea class="form-control" id="Medication" name="medications" rows="3" value="@Model.medicInfo.medications"></textarea>
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Notes</label>
		<div class="col-sm-6">
			<textarea class="form-control" id="Notes" name="notes" rows="3" value="@Model.medicInfo.notes"></textarea>
		</div>
	</div>
	

	@if (Model.successMessage.Length > 0)
	{
		<div class="row mb-3">
			<div class="col sm-9">
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					<strong>@Model.successMessage</strong>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			</div>
		</div>
	}

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
		</div>
	</div>
</form>
